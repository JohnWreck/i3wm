# terminal emulator
super + {_,shift} + Return
	{alacritty, alacritty -e tmux}

# program launcher
super + @space 
	rofi -show combi -modes combi -combi-modes "window,drun" 

super + a 
	rofi -show combi -modes combi -combi-modes "window,drun" 

#super + a
#    rofi -show window 

super + shift + @space
    xdg-open "$(find ~ -type f | grep -v '/\.'| rofi -dmenu -i -p "search ")"

super + Escape
	i3lock --nofork -e -c 141414

super + n
    dunstctl close-all

super + shift + n
    dunstctl history-pop

Print
    flameshot gui

super + e
    thunar

super + shift + e
    alacritty -e nnn -d -e

super + b
    brave-browser

super + shift + b
    firefox

super + m
    thunderbird

# Shutdown/Suspend
super + ctrl + {shift,alt} s
    systemctl {suspend,poweroff}    

# Reboot
super + ctrl + alt + r
    systemctl reboot

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# make sxhkd reload its configuration files:
super + alt + s 
	pkill -USR1 -x sxhkd

# close and kill
super + shift + {_,ctrl +} q
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local

# Move node to last/next desktop
super + {_,ctrl,shift +} d
    bspc node -d {last, prev, next} --follow

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

# Node mode sticky switch
super + s
    bspc node -g sticky

# Node type tiled, floating 
super + {_,shift + } t
    bspc node -t {tiled, floating}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# Focus the last node/desktop
#super + {grave,Tab}
#	bspc {node,desktop} -f next
#

super + {_,shift + } grave
	bspc desktop -f {next.occupied,prev.occupied}

super + {_,shift + } Tab 
	bspc desktop -f {last.occupied,next}

alt + Tab
	bspc node -f next.local.!hidden.window

## focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Last desktop
super + w 
    bspc desktop -f '^9'

super + shift + w
    bspc node -d '^9'

# Hide/unhide nodes
super + {_,shift +} x
    bspc {node --flag hidden=on, node $(for i in $(bspc query -N -d focused -n .hidden.window); do $(bspc node $i --flag hidden=off --focus);done) --flag hidden=off

# Preselect
super + {_,shift} + BackSpace
    bspc node -p {south,cancel}


# expand a window by moving one of its side outward
super + shift + ctrl + {h,j,k,l}
	bspc node -z {left -30 0,bottom 0 30,top 0 -30,right 30 0}

# contract a window by moving one of its side inward
super + ctrl + {h,j,k,l}
	bspc node -z {right -30 0,top 0 30,bottom 0 -30,left 30 0}

# Move Floating 
super + ctrl + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Move node to next/prev monitor
super + {_,shift} + y
    bspc {monitor -f next, node -m next --follow}

# Rotate
super + {_,shift} + o
    bspc node @/ -R {90, -90}

# Receptacles
super + {_,shift +} i 
    bspc node {-i,$(bspc query -N -n focused) -n $(bspc query -N -n .leaf.\!window)}

# Pulse Audio controls
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# Media player controls
XF86AudioPlay
    playerctl play-pause
XF86AudioPause
    playerctl pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioStop
    playerctl stop

##Backlight
XF86MonBrightnessUp
    brightnessctl set +10
XF86MonBrightnessDown
    brightnessctl set 10-
